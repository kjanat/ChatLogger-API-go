# Build Stage
FROM golang:1.24.2-alpine AS builder
WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY . .
# Build the worker binary for linux
RUN CGO_ENABLED=0 GOOS=linux go build -o /app/chatlogger-api-go-worker ./cmd/worker

# Final Stage
FROM alpine:3.21.3
WORKDIR /app
# Copy only the compiled binary from the builder stage
COPY --from=builder /app/chatlogger-api-go-worker /app/chatlogger-api-go-worker
ENV GIN_MODE=release
RUN mkdir -p /app/exports
RUN chmod +x /app/chatlogger-api-go-worker
CMD ["/app/chatlogger-api-go-worker"]
