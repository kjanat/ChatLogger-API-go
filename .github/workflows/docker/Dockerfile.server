FROM golang:1.24-alpine AS builder
WORKDIR /app
COPY . .
RUN go build -o /app/chatlogger-server ./cmd/server

FROM alpine:latest
WORKDIR /app
COPY --from=builder /app/chatlogger-server /app/
# COPY --from=builder /app/migrations /app/migrations
ENV GIN_MODE=release
EXPOSE 8080
CMD ["/app/chatlogger-server"]
